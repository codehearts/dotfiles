# Replace <gmail_address> with a Gmail address

set folder		= ~/Mail/Gmail
set spoolfile	= +Inbox
mailboxes `find ~/Mail/Gmail -maxdepth 1 -mindepth 1 -type d -printf "+'%f' "`

# Sending mail
set from		= <gmail_address>
set sendmail	= "/usr/bin/msmtp -a gmail"
unset record	# Gmail automatically records sent mail

set mbox		= +Mac\ Archive
set postponed	= +Drafts
