# Replace <school_address> with a school address managed through Gmail

set folder    = ~/Mail/School
set spoolfile = +Inbox
mailboxes `find ~/Mail/School -maxdepth 1 -mindepth 1 -type d -printf "+'%f' "`

# Sending mail
set from     = <school_address>
set sendmail = "/usr/bin/msmtp -a school"
unset record # Gmail automatically records sent mail

set mbox      = +Mac\ Archive
set postponed = +Drafts
