#!/usr/bin/env bash
# Reloads ~/.Xresources and my running desktop software.
#
# References: use-color from http://superuser.com/a/921802
# Author:  Kate Hart (https://github.com/codehearts)

pkill polybar
pkill compton
pkill dropbox
pkill gcalert
pkill dunst
pkill bspwmrc

exec ${HOME}/.config/bspwm/bspwmrc
