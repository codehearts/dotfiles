#
# wm independent hotkeys
#

super + Return
  xterm

{XF86Search,super + space}
  sh -c '. $HOME/.cache/wal/colors.sh; dmenu_run -nb "$color0" -nf "$color15" -sb "$color1" -sf "$color15" -i -f -fn "M+ 1p:pixelsize=21" -p Run'

super + a
  xterm -e music

super + e
  firefox

super + v
  gvim

super + z
  dessiner

{XF86AudioLowerVolume}
    amixer sset Master 5%- &> /dev/null

{XF86AudioRaiseVolume}
    amixer sset Master 5%+ &> /dev/null

{XF86AudioMute}
    amixer sset Master toggle &> /dev/null

{XF86AudioPrev}
    mpc prev &> /dev/null

{XF86AudioNext}
    mpc next &> /dev/null

{XF86AudioPlay}
    mpc toggle &> /dev/null

{XF86MonBrightnessUp}
    xbacklight -inc 5

{XF86MonBrightnessDown}
    xbacklight -dec 5

# scratchpad terminal
super + d
  if bspc node "$(cat /tmp/scratchpad_id)" --flag hidden; then \
    bspc node -f "$(cat /tmp/scratchpad_id)"; \
  else \
    (xterm -name scratchpad -geometry 80x20+0+0 -e sh -c \
      "bspc query -N -n focused.floating > /tmp/scratchpad_id && $SHELL" &); \
  fi

# quit bspwm normally
super + alt + Escape
  bspc quit

# reload desktop
super + q
  bonjour


#
# bspwm hotkeys
#

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# rotate around the node
super + r
	bspc node @/ -R 90

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# move a floating window or expand a tiled space in the given direction
# sxhkd only parses one {} set, so we must assign all 3 possible args at once
super + alt + {h,j,k,l}
  arg={'-20 0:@west:-10','0 20:@south:+10','0 -20:@north:-10','20 0:@east:+10'}; \
  if bspc query -N -n .focused.floating; then \
    bspc node --move $(echo $arg | cut -d: -f1); \
  else \
    bspc node $(echo $arg | cut -d: -f2) -r $(echo $arg | cut -d: -f3); \
  fi

# resize a floating window or contract a tiled space in the given direction
# sxhkd only parses one {} set, so we must assign all 3 possible args at once
super + alt + shift + {h,j,k,l}
  arg={'-20 0:@east:-10','0 20:@north:+10','0 -20:@south:-10','20 0:@west:+10'}; \
  if bspc query -N -n .focused.floating >/dev/null 2>&1; then \
    bspc node --resize bottom_right $(echo $arg | cut -d: -f1); \
  else \
    bspc node $(echo $arg | cut -d: -f2) -r $(echo $arg | cut -d: -f3); \
  fi

#
# pointer focus/move/resize
#

# focus
~button1
	bspc pointer -g focus

# start move/resize
super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
	bspc pointer -u
